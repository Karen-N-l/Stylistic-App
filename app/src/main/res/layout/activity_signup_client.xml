<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup_clientActivity">

    <TextView
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:id="@+id/text_logintitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Client Signup" />

    <EditText
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="16dp"
        android:hint="Email"
        android:background="@color/white"
        android:layout_marginTop="32dp"
        android:layout_below="@id/text_logintitle"
        android:id="@+id/editTextTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:textSize="16sp"
        android:layout_below="@id/editTextTextEmail"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="16dp"
        android:hint="Password"
        android:background="@color/white"
        android:layout_marginTop="32dp"
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />



    <Button
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:background="@color/purple"
        android:layout_marginTop="32dp"
        android:layout_below="@id/editTextPassword"
        android:id="@+id/bbt_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register" />

    <RelativeLayout
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_below="@id/bbt_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:id="@+id/textView3_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?" />

        <TextView
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/textView3_right"
            android:textStyle="bold"
            android:textColor="@color/purple"
            android:id="@+id/textView_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login" />
    </RelativeLayout>

</RelativeLayout>